# <                                      ` lastw
# z qute      a             q screensh   1 desktop
# x           s             w            2 desktop
# c           d             e            3 desktop
# v           f             r            4 desktop
# b           g             t            5 desktop
#                                                 
# n           h left        y mpv-yt     5 desktop
# m mono      j down        u            7 desktop
# ,           k up          i            8 desktop
# .           l right       o            9 desktop
# /           ;             p            0  
#             '             [            - wemo
#             \             ]            =      
#	                            
#ESC lock,reload
#SPACE alunc,presel
#ENTER terminal
#TAB lastd

### app

super + Return
	urxvt
super + z
	qutebrowser

### script

super + space
	dmenu_recent -i

super + alt + space
	rofi -show ssh

super + q
	maim | xclip -selection clipboard -t image/png
super + shift + q
	maim -s | xclip -selection clipboard -t image/png
super + control + q
	maim -d 3 | xclip -selection clipboard -t image/png && notify-send -u low 'Screenshot captured'
super + control + shift + q
	maim -s -d 3 | xclip -selection clipboard -t image/png && notify-send -u low 'Screenshot captured'

super + shift + p
	superp
super + p
	dmenu-lpass
super + y
	mpv-yt

super + BackSpace
	dmenuhandler
super + shift + space
	superp

super + {minus,underscore}
	wemo-toggle {wemo-fan,wemo-pi}
super + {equal,backslash}
	hue 13 {off,low}


### env

XF86Audio{Raise,Lower}Volume
	volumechange {5,-5}
XF86AudioMute
	volumechange mute
XF86AudioPlay
	playerctl play-pause
XF86AudioPrev
	playerctl previous
XF86AudioNext
	playerctl next
super + XF86AudioMute
	pavucontrol-popup

XF86MonBrightnessUp
        xbacklight + 10
XF86MonBrightnesDown
        xbacklight - 10

super + Escape
	i3lock -fe -c 808080
super + Print
	nmtui-popup
super + shift + Print
	nmcli connection up fa2d9425-514c-4b2c-882e-02080f0476e2

XF86Display
	monitors.sh 0
super + XF86Display
	monitors.sh 1


### bspwm

# focus/shift
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'
super + f
	bspc node -g sticky
super + {s,t}
	bspc node -t {floating,tiled}

# close and kill
super + shift + w
	bspc node -k

# monocle
super + m
	bspc desktop -l next

# focus the next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last
Print  
        bspc desktop -f last

# inner gaps
super + ctrl + {1-9}
	bspc config window_gap {5,10,15,25,40,50,60,75,90}
# outer gaps
super + ctrl + shift + {1-9}
	outer {0,10,20,40,70,110,160,220,290}

# presel
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}
super + ctrl + space
	bspc node -p cancel

# expand
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
# contract
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
# move floating
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
super + shift + {Left,Down,Up,Right}
	bspc node -v {-80 0,0 80,0 -80,80 0}

# reload sxhkd config
super + shift + Escape
	pkill -USR1 -x sxhkd


# quit bspwm normally
super + alt + Escape
	bspc quit
