super + Return
	urxvt
super + shift + Return
	urxvt -bd red
super + space
	dmenu_recent -i
super + shift + m
	dmenumount
super + shift + control + m
	dmenuumount
super + shift + e
	dmenuunicode
super + shift + control + y
	cd /a/sim/yt ; dmenfm
super + shift + y
	`user=$(cat /a/sim/yt/twitch | dmenu -i -p twitch) ; mpv http://twitch.tv/$user`
super + shift + control + d
	teensy-loader-cli -mmcu=atmega32u4 -w -v $(ls -1t ~/tmp/ergodox_ez_* | head -1 ) && notify-send 'Firmware updated' || notify-send 'Firmware update failed'
super + alt + space
	rofi -show ssh
super + ctrl + q
        screencast
super + shift + space
	rofi -show window
super + shift + control + space
	superp
super + Print
	networkmanager_dmenu
XF86Display
	monitors.sh

super + q
	maim --hidecursor | xclip -selection clipboard -t image/png
	#maim --format png | xclip -selection clipboard -t image/png
super + shift + q
	maim -s --hidecursor | xclip -selection clipboard -t image/png
	#maim -s --format png /dev/stdout | xclip -selection clipboard -t image/png
super + shift + o
        rifle ~/tmp/"$(ls -1t ~/tmp | dmenu -i -p open)"
super + shift + control + o
        rifle ~/tmp/"$(ls -1t ~/tmp | head -1)"
super + shift + c
        notify-send "Clipboard:" "$(xclip -o -selection clipboard)" ; notify-send "Primary:" "$(xclip -o -selection primary)"

super + p
	passmenu
super + shift + p
	ls -1 ~/.password-store/**/*.gpg | sed -e 's/^\/home\/mrj\/.password-store\///g' -e 's/.gpg$//g' | dmenu -i -p account | xclip -r -selection primary
super + control + shift + p
	ls -1 ~/.password-store/**/*.gpg | dmenu -i -p file | xclip -r -selection primary

XF86Tools
	xbacklight -set 50 ; outer 0 ; bspc config window_gap 60 ; sudo rfkill unblock wlan ; sudo rfkill unblock bluetooth ; xset +dpms ; xset s noblank ; xset s off

XF86AudioPlay
	playerctl play-pause
XF86AudioPrev
	playerctl previous
XF86AudioNext
	playerctl next
XF86AudioMicMute
        ssh zr 'playerctl play-pause'
super + Escape
	i3lock -fe -c 222222

### bspwm

# focus/shift
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'
super + ctrl + f
	bspc node -g sticky
super + {s, shift + s,t}
	bspc node -t {floating,pseudo_tiled,tiled}

# close and kill
super + control + {_,shift + }w
	bspc node -{c,k}

# monocle
super + m
	bspc desktop -l next

# focus the next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}

# focus the last node/desktop
Print  
        bspc desktop -f last
super + Tab
        bspc desktop -f last
Alt_R
        bspc desktop -f last

# presel
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}
super + ctrl + space
	bspc node -p cancel

# expand
super + ctrl + Tab
	sleep .1 ; xdotool key shift+Escape Escape P P
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
# contract
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
# move floating
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
super + shift + {Left,Down,Up,Right}
	bspc node -v {-80 0,0 80,0 -80,80 0}

# reload sxhkd config
super + shift + Escape
	pkill -USR1 -x sxhkd

# quit bspwm normally
super + alt + Escape
	bspc quit
