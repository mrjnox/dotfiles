	passmenu
super + space
	dmenu_recent -i
super + alt + space
	rofi -show ssh
super + control + q
        screencast
super + shift + space
	superp
super + Print
	networkmanager_dmenu
XF86Display
	monitors.sh

super + q
	maim | xclip -selection clipboard -t image/png
super + shift + q
	maim -s | xclip -selection clipboard -t image/png
super + o
        rifle ~/tmp/$(ls -1t ~/tmp | rofi -dmenu -i -p open)
super + shift + o
        rifle ~/tmp/$(ls -1t ~/tmp | head -1)
super + shift + p
	ls -1 ~/.password-store/**/*.gpg | sed -e 's/^\/home\/mrj\/.password-store\///g' -e 's/.gpg$//g' | rofi -dmenu -i -p account | xclip -r -selection primary
super + control + shift + p
	ls -1 ~/.password-store/**/*.gpg | rofi -dmenu -i -p file | xclip -r -selection primary

XF86Favorites
	for i in {1..20} ; do nmcli connection up fa2d9425-514c-4b2c-882e-02080f0476e2 && exit ; sleep 3 ; done
XF86Tools
	xbacklight -set 50 ; outer 0 ; bspc config window_gap 60 ; sudo rfkill unblock wlan ; sudo rfkill unblock bluetooth ; xset +dpms ; xset s noblank ; xset s off

XF86Audio{Raise,Lower}Volume
	volumechange {5,-5}
XF86AudioMute
	volumechange mute
XF86AudioPlay
	playerctl play-pause
XF86AudioPrev
	playerctl previous
XF86AudioNext
	playerctl next
XF86AudioMicMute
        ssh zr 'playerctl play-pause'
super + XF86AudioMute
	pavucontrol-popup
super + Escape
	i3lock -fe -c 808080

### bspwm

# focus/shift
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'
super + f
	bspc node -g sticky
super + {s,t}
	bspc node -t {floating,tiled}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# monocle
super + m
	bspc desktop -l next

# focus the next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last
Print  
        bspc desktop -f last

# inner gaps
super + ctrl + {1-9}
	bspc config window_gap {5,10,15,25,40,50,60,75,90}
# outer gaps
super + ctrl + shift + {1-9}
	outer {0,10,20,40,70,110,160,220,290}

# presel
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}
super + ctrl + space
	bspc node -p cancel

# expand
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
# contract
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
# move floating
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
super + shift + {Left,Down,Up,Right}
	bspc node -v {-80 0,0 80,0 -80,80 0}

# reload sxhkd config
super + shift + Escape
	pkill -USR1 -x sxhkd

# quit bspwm normally
super + alt + Escape
	bspc quit
